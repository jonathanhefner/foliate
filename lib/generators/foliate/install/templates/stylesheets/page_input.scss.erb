.foliate-page-link {
<% if options[:bootstrap] -%>
  @extend .text-muted;
<% else -%>
  color: rgba(0, 0, 0, 0.6);
<% end -%>
}

.foliate-i-of-n {
  margin: 0 1em;
}

.foliate-form {
<% if options[:bootstrap] -%>
  @extend .form-inline;
<% end -%>
  display: inline-block;
  margin: 0;
}

.foliate-page-input {
<% if options[:bootstrap] -%>
  @extend .form-control;
  padding-left: 0;
  padding-right: 0;
  width: 2.5em !important;
<% else -%>
  line-height: 1.5em;
  border: 1px solid rgba(0, 0, 0, 0.5);
  border-radius: 2px;
  width: 2.5em;
<% end -%>
  font-size: 1em;
  text-align: center;
  font-family: monospace;
}

.foliate-of {
  margin: 0 0.25em;
}
